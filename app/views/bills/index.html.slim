h1
  | Listing bills
  |  | 
  = link_to 'New', new_bill_path

table.table
  thead
    tr
      th Status
      th Bill
      th At
      th Category
      th Price
      th Comment
      th Benefactor
      th Beneficiaries

  tbody
    - @bills.each do |bill|
      tr
        td = bill.status
        td = link_for bill
        td = bill.at.to_date
        td = bill.category.name
        td = bill.price
        td = bill.comment
        td = [*bill.user].map(&:name).join(',')
        td = bill.users.map(&:name).join(',')
